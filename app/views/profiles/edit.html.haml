= form_for current_user, :url => profile_path do |f|
  = f.fields_for current_user.profile do |p|
    %h3 Interested in...
    %p
      = p.label :remote_local_preference, "Pairing in person, remotely, or both?"
      = p.select :remote_local_preference, Profile::LOCAL_PREFERENCES
    %p
      = p.label :interests, "Describe your pairing interests"
      = p.text_area :interests
    %p
      = f.submit
