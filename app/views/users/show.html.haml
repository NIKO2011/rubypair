#user-profile
  = image_tag("http://www.gravatar.com/avatar.php?gravatar_id=#{@user.gravatar_id}", class: :avatar)

  %h2= @user.name

  %ul
    %li.location
      %label Location
      %span.value= @user.location
    %li.email
      %label E-mail
      %span.value= link_to @user.email, "mailto:#{@user.email}"
    - if @user.twitter.present?
      %li.twitter
        %label Twitter
        %span.value= link_to "@#{@user.twitter}", "http://twitter.com/#{@user.twitter}"
    %li.pairing-preference
      %label
        Pairing preference
        %span.smaller
          (remote, in-person, both)
      %span.value= @user.remote_local_preference
    %li.interests
      %label Interests
      %span.value.lengthy= @user.interests.split(",").map { |term| link_terms_to_search(term) }.join(",").html_safe
