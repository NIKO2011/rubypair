<li class="user">
  <p>
    <%= image_tag("http://www.gravatar.com/avatar.php?gravatar_id=#{user.gravatar_id}") %>
  </p>
  <p>
    Github: <%= link_to " #{user.name} (#{user.github_login})", user.github_url %>
    <br/>
    Interested in remote pairing: <%= display_remote_paring(user.profile.interested_in_remote) %>
  </p>
</li>
