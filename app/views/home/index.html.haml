#search
  %span.search-icon
  = form_tag "/search", method: :get do
    = text_field_tag "query", nil, class: "search-field", placeholder: "search by name or interests", size: 35

#newest_users
  #newest_remote_users
    %h2 New <span class="pairing-type">Remote</span>
    %ul
      = render @newest_remote_users
  #newest_local_users
    %h2 New <span class="pairing-type">In-Person</span>
    %ul
      = render @newest_local_users
